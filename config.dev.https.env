# Development Environment Configuration with HTTPS
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///:memory:

# Email Configuration (for development, you can use Mailtrap or similar)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Token Expiration (in seconds)
ACTIVATION_TOKEN_EXPIRES=86400  # 24 hours
PASSWORD_RESET_TOKEN_EXPIRES=3600  # 1 hour

# Security
BCRYPT_LOG_ROUNDS=12

# Development HTTPS
HTTPS_ENABLED=True
SSL_CONTEXT=ssl
