# Production Environment Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Database Configuration - Use PostgreSQL for production
DATABASE_URL=postgresql://username:password@host:port/database_name

# Email Configuration - Configure with your production email service
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-production-email@gmail.com
MAIL_PASSWORD=your-production-app-password
MAIL_DEFAULT_SENDER=your-production-email@gmail.com

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Token Expiration (in seconds)
ACTIVATION_TOKEN_EXPIRES=86400  # 24 hours
PASSWORD_RESET_TOKEN_EXPIRES=3600  # 1 hour

# Security
BCRYPT_LOG_ROUNDS=12
