# Test Environment Configuration
FLASK_APP=app.py
FLASK_ENV=testing
SECRET_KEY=test-secret-key-not-for-production

# Database Configuration - Use in-memory for tests
DATABASE_URL=sqlite:///:memory:

# Email Configuration - Disabled for testing
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=test@example.com
MAIL_PASSWORD=test-password
MAIL_DEFAULT_SENDER=test@example.com

# JWT Configuration
JWT_SECRET_KEY=test-jwt-secret-key-not-for-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Token Expiration (in seconds)
ACTIVATION_TOKEN_EXPIRES=86400  # 24 hours
PASSWORD_RESET_TOKEN_EXPIRES=3600  # 1 hour

# Security
BCRYPT_LOG_ROUNDS=4  # Lower for faster tests
